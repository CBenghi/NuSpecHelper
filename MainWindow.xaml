<Window x:Class="NuSpecHelper.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="350" Width="525">
    <Grid>
        <Button Content="Find dependency inconsistencies in Nuspec." Margin="90,38,10.4,0" VerticalAlignment="Top" Click="ButtonBase_OnClick" />
        <RichTextBox VerticalScrollBarVisibility="Auto" x:Name="Report" Margin="10,121,10,37" Background="LightYellow" >
            <RichTextBox.Resources>
                <Style TargetType="{x:Type Paragraph}">
                    <Setter Property="Margin" Value="0"/>
                </Style>
            </RichTextBox.Resources>
        </RichTextBox>
        <TextBox x:Name="Folder" Height="23" Margin="90,10,10.4,0" TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Top"/>
        <Label Content="Folder:" HorizontalAlignment="Left" Margin="10,7,0,0" VerticalAlignment="Top" Width="75"/>
        <Button Content="Find updatable libraries." Margin="90,65,10.4,0" VerticalAlignment="Top" Click="FindUpdate" />
        <Button Content="List clr version." Margin="8,0,0,10" Click="ListClr" Height="22" VerticalAlignment="Bottom" HorizontalAlignment="Left" Width="109" />
        <Button Content="Find dll Conflict" Margin="124,0,0,9.8" Click="FindConflict" Height="22" VerticalAlignment="Bottom" HorizontalAlignment="Left" Width="109" />
        <Button x:Name="RemovePackageButton" IsEnabled="False" Content="Remove Unused Packages" Margin="238,0,0,9.8" Click="RemoveUnused" Height="22" VerticalAlignment="Bottom" HorizontalAlignment="Left" Width="152" />
        <Button Content="Test against Nuget.Org" Margin="90,92,10,0" VerticalAlignment="Top" Click="TestNugetOrg" />
    </Grid>
</Window>
